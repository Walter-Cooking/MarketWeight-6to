            <th>Moneda</th>
            <th>Cantidad</th>
            <th>Compra</th>
            <th>Fecha/Hora</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.IdUsuario</td>
            <td>@item.idMoneda</td>
