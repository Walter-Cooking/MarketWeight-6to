@model MarketWeight_6to.mvc.ViewModel.MonedaVM

<h2>Crear Moneda</h2>

<form asp-action="Crear" method="post">
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Precio" class="form-label"></label>
        <input asp-for="Precio" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Cantidad" class="form-label"></label>
        <input asp-for="Cantidad" class="form-control" type="number" />
        <span asp-validation-for="Cantidad" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Crear</button>
    <a class="btn btn-secondary" href="@Url.Action("ObtenerMoneda", "Moneda")">Cancelar</a>
</form>
