@model MarketWeight_6toaeaeeaeaeeaea.ViewModel.CompraViewModel
@using Microsoft.AspNetCore.Mvc.Rendering

<h2>Simulación de Compra</h2>

<form asp-action="Comprar" method="post">
    <input type="hidden" asp-for="UsuarioId" />

    <label for="MonedaId">Selecciona una moneda:</label>
    <select asp-for="MonedaId" asp-items="@(new SelectList(Model.MonedasDisponibles, "IdMoneda", "Nombre"))"></select>

    <label for="Cantidad">Cantidad:</label>
    <input asp-for="Cantidad" type="number" step="0.01" />

    <button type="submit">Comprar</button>
</form>

@if (ViewBag.Mensaje != null)
{
    <p style="color: green">@ViewBag.Mensaje</p>
}
